#:kivy 1.9.0
#:import label kivy.uix.label
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#: import sm kivy.uix.screenmanager

<MenuBar@ActionBar>:
    pos_hint: {'top':1}
    background_color: (0,.75,.25,.5)
    previous_image: 'res/logo.png'
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Nomen est omen'
            with_previous: False
        ActionOverflow:
        ActionButton:
            #text: 'Namen'
            icon: 'res/add_favs.png'
            on_release:  app.root.current = 'rating'
        ActionButton:
            #text: 'Favoriten'
            icon: 'res/like.png'
            on_release:  app.root.current = 'favs'
        ActionButton:
            #text: 'Filter'
            icon: 'res/settings.png'
            on_release:  app.root.current = 'filter'

<FilterView>:
    name: 'filter'
    BoxLayout:
        orientation: 'vertical'
        spacing: 1

        MenuBar:
        Label:
            text: "FilterView"


<FavoritesView>:
    name: 'favs'
    BoxLayout:
        orientation: 'vertical'
        spacing: 1

        MenuBar:
        ListView:
            id: favorite_list
            adapter:
                ListAdapter(
                data=root.favorite_names,
                cls=label.Label)


<RatingView>:
    name:  'rating'
    BoxLayout:
        orientation: 'vertical'
        spacing: 1
        MenuBar:

        Label:
            id: 'name'
            text: root.name_value
            font_size: '50sp'
            color: root.gender_color
            background_color: [1,0,0,1]
            size_hint: (1., 0.1)

        Label:
            id: 'origin'
            text: root.name_origin
            size_hint: (1., 0.1)
            color: (0,0,0,1)

        BoxLayout:
            size_hint: (1., 0.1)
            spacing: 10
            Button:
                id: rate_pro_btn
                on_press: root.rate_pro()
                background_color: [1,1,1,1]
                background_normal: ""
                background_down: ""
                Image:
                    source: 'res/up.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                id: rate_con_btn
                on_press: root.rate_con()
                background_color: [1,1,1,1]
                background_normal: ""
                background_down: ""
                Image:
                    source: 'res/down.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y




ScreenManagement:
    transition: sm.NoTransition()
    RatingView:
    FavoritesView:
    FilterView:
