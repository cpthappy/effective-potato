#:kivy 1.9.0
#:import label kivy.uix.label
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import sm kivy.uix.screenmanager

<MenuBar@ActionBar>:
    pos_hint: {'top':1}
    background_normal: ""
    previous_image: 'res/logo.png'
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Nomen est omen'
            with_previous: False
            app_icon: 'res/logo.png'
        ActionOverflow:
        ActionButton:
            #text: 'Namen'
            icon: 'res/add_favs.png'
            on_release:  app.root.current = 'rating'
        ActionButton:
            #text: 'Favoriten'
            icon: 'res/like.png'
            on_release:  app.root.current = 'favs'
        ActionButton:
            #text: 'Filter'
            icon: 'res/settings.png'
            on_release:  app.root.current = 'filter'

<FilterView>:
    name: 'filter'
    BoxLayout:
        orientation: 'vertical'
        spacing: 1

        MenuBar:
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Geschlecht"
            TextInput:
                id: gender_filter_input
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Geschlecht"
            TextInput:
                id: gender_filter_input
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Geschlecht"
            TextInput:
                id: gender_filter_input
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Geschlecht"
            TextInput:
                id: gender_filter_input
<FavoritesView>:
    name: 'favs'
    on_enter: self.update()
    BoxLayout:
        orientation: 'vertical'
        spacing: 1

        MenuBar:
        ListView:
            id: favorite_list
            adapter:
                ListAdapter(
                args_converter=root.args_converter,
                data=root.favorite_names,
                selection_mode='single',
                cls=ListItemButton)
        BoxLayout:
            size_hint_y: 0.25
            orientation: 'horizontal'
            Button:
                background_normal: ""
                Image:
                    source: 'res/info.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                background_normal: ""
                Image:
                    source: 'res/delete.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y



<RatingView>:
    name:  'rating'
    BoxLayout:
        orientation: 'vertical'
        spacing: 1
        MenuBar:

        Label:
            id: 'name'
            text: root.name_value
            font_size: '50sp'
            color: root.gender_color
            background_color: [1,0,0,1]
            size_hint: (1., 0.1)

        Label:
            id: 'origin'
            text: root.name_origin
            size_hint: (1., 0.1)
            color: (0,0,0,1)

        BoxLayout:
            size_hint: (1., 0.1)
            spacing: 10
            Button:
                #name: rate_pro_btn
                on_press: root.rate_pro()
                background_color: [1,1,1,1]
                background_normal: ""
                background_down: ""
                Image:
                    source: 'res/up.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            Button:
                #name: rate_con_btn
                on_press: root.rate_con()
                background_color: [1,1,1,1]
                background_normal: ""
                background_down: ""
                Image:
                    source: 'res/down.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

ScreenManagement:
    transition: sm.NoTransition()
    RatingView:
    FavoritesView:
    FilterView:
