#:kivy 1.9.0
#:import label kivy.uix.label
#:import ListAdapter kivy.adapters.listadapter.ListAdapter
#:import ListItemButton kivy.uix.listview.ListItemButton
#:import sm kivy.uix.screenmanager
#: import icon kivy.garden.iconfonts.icon

<MenuBar@ActionBar>:
    pos_hint: {'top':1}
    background_normal: ""
    previous_image: 'res/logo.png'
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Nomen est omen'
            with_previous: False
            app_icon: 'res/sparrow.png'
        ActionButton:
            markup: True # Always turn markup on
            text: "%s"%(icon('flaticon-baby29'))
            font_size: '25dp'
            on_release:  app.root.current = 'rating'
        ActionButton:
            markup: True # Always turn markup on
            text: "%s"%(icon('flaticon-loving34'))
            font_size: '25dp'
            on_release:  app.root.current = 'favs'
        ActionButton:
            markup: True # Always turn markup on
            text: "%s"%(icon('flaticon-settings48'))
            font_size: '25dp'
            on_release:  app.open_settings()

<FavoritesView>:
    name: 'favs'
    on_enter: self.update()
    BoxLayout:
        orientation: 'vertical'
        spacing: 1

        MenuBar:
        ListView:
            id: favorite_list
            adapter:
                ListAdapter(
                args_converter=root.args_converter,
                data=root.favorite_names,
                selection_mode='single',
                cls=ListItemButton)
        BoxLayout:
            size_hint_y: 0.25
            orientation: 'horizontal'
            Button:
                background_normal: ""
                Image:
                    source: 'res/info.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                background_normal: ""
                Image:
                    source: 'res/delete.png'
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y



<RatingView>:
    name:  'rating'
    on_enter: self.update_current_name()
    BoxLayout:
        orientation: 'vertical'
        spacing: 1
        MenuBar:

        Label:
            id: 'name'
            text: root.name_value
            font_size: '50sp'
            color: root.gender_color
            background_color: [1,0,0,1]
            size_hint: (1., 0.1)

        Label:
            id: 'origin'
            text: root.name_origin
            size_hint: (1., 0.1)
            color: (0,0,0,1)

        Label:
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            id: 'info'
            text: root.name_info
            color: (0,0,0,1)
            halign: 'center'
            valign: 'middle'

        Label:
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
            id: 'variants'
            text: root.name_variants
            size_hint: (1., 0.1)
            color: (0,0,0,1)
            halign: 'center'
            valign: 'middle'

        BoxLayout:
            size_hint: (1., 0.1)
            spacing: 10
            Button:
                on_press: root.rate_pro()
                background_color: [1,1,1,1]
                background_normal: ""
                background_down: ""
                color: [0,1,0,1]
                font_size: '75dp'
                markup: True # Always turn markup on
                text: "%s"%(icon('flaticon-round68'))

            Button:
                on_press: root.update_current_name()
                background_color: [1,1,1,1]
                background_normal: ""
                background_down: ""
                color: [0.5,0.5,0.5,1]
                font_size: '75dp'
                markup: True # Always turn markup on
                text: "%s"%(icon('flaticon-direction344'))

            Button:
                on_press: root.rate_con()
                background_color: [1,1,1,1]
                color: [1,0,0,1]
                font_size: '75dp'
                background_normal: ""
                background_down: ""
                markup: True # Always turn markup on
                text: "%s"%(icon('flaticon-close6'))

ScreenManagement:
    transition: sm.NoTransition()
    RatingView:
    FavoritesView:
