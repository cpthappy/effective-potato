<MenuBar@ActionBar>:
    pos_hint: {'top':1}
    background_image: 'res/white-bg.png'
    background_color: (0.467, 0.286, 1, 0.75)
    ActionView:
        use_separator: True
        ActionPrevious:
            title: 'Monikoo'
            with_previous: False
            app_icon: 'res/logo.png'
            app_icon_height: 1
            app_icon_width: 1
        ActionButton:
            markup: True # Always turn markup on
            text: "%s"%(icon('flaticon-eye105'))
            font_size: '25dp'
            on_release:  app.root.current = 'rating'
        ActionButton:
            markup: True # Always turn markup on
            text: "%s"%(icon('flaticon-heart296'))
            font_size: '25dp'
            on_release:  app.root.current = 'favs'
        ActionButton:
            markup: True # Always turn markup on
            text: "%s"%(icon('flaticon-settings51'))
            font_size: '25dp'
            on_release:  app.open_settings()
        ActionButton:
            markup: True # Always turn markup on
            text: "%s"%(icon('flaticon-round66'))
            font_size: '25dp'
            on_release:  app.show_about()

<FavoritesView>:
    name: 'favs'
    on_enter: self.update()
    BoxLayout:
        orientation: 'vertical'
        spacing: 1

        MenuBar:
        Label:
            text: 'Favoriten'
            font_size: '40dp'
            size_hint: (1., 0.1)
            color: (0.467, 0.286, 1, 0.75)
        ListView:
            id: favorite_list
            size_hint: (1., 0.9)
            adapter:
                ListAdapter(
                args_converter=root.args_converter,
                data=root.favorite_names,
                selection_mode='none',
                cls=CompositeListItem)

<ReactiveButton>:
    background_color: [1,1,1,1]
    background_normal: ""
    background_down: ""
    markup: True # Always turn markup on

<RatingView>:
    name:  'rating'
    BoxLayout:
        orientation: 'vertical'
        spacing: 1
        MenuBar:

        Label:
            id: 'name'
            text: root.name_value
            markup: True
            font_size: '50dp'
            color: root.gender_color
            background_color: [1,1,1,1]
            size_hint: (1., 0.1)
        RstDocument:
            id: 'info'
            text: root.name_info
            size_hint: (1., 0.3)
            background_color: (1,1,1,1)
        Label:
            id: 'remaining'
            text: root.names_remaining
            font_size: '15dp'
            background_color: [1,1,1,1]
            size_hint: (1., 0.025)
            color: (0.467, 0.286, 1, 0.75)

        BoxLayout:
            size_hint: (1., 0.1)
            spacing: 10
            ReactiveButton:
                on_press: root.rate_pro()
                font_size: '60dp'
                color: (0.149, 0.8, 0.196, 0.75)
                text: "%s"%(icon('flaticon-round69'))
            ReactiveButton:
                on_press: root.update_current_name()
                color: (0.467, 0.286, 1, 0.75)
                font_size: '60dp'
                text: "%s"%(icon('flaticon-refresh61'))
            ReactiveButton:
                on_press: root.rate_con()
                color: (1, 0.678, 0.384, 0.75)
                font_size: '60dp'
                text: "%s"%(icon('flaticon-rounded61'))

ScreenManagement:
    transition: sm.NoTransition()
    RatingView:
    FavoritesView:
